# Azure OpenAI Configuration
AOAI_API_KEY=your-azure-openai-api-key-here
AOAI_DEPLOY_GPT4O=gpt-4o-deployment-name
AOAI_ENDPOINT=https://your-resource.openai.azure.com/
AOAI_API_VERSION=2024-05-01-preview
AOAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Database Configuration
DB_PATH=history.db

# Langfuse Observability (Optional)
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# API Configuration
API_BASE_URL=http://localhost:8001/api/v1

# Atlassian MCP Server Configuration
ATLASSIAN_URL=https://your-domain.atlassian.net
ATLASSIAN_EMAIL=your-email@company.com
ATLASSIAN_API_TOKEN=your-atlassian-api-token-here

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000
MCP_SERVER_PROTOCOL=http

# RAG Configuration
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7
CHUNK_SIZE=800
CHUNK_OVERLAP=200

# Data Collection Schedule (Cron format)
COLLECTION_SCHEDULE_JIRA=0 */6 * * *
COLLECTION_SCHEDULE_CONFLUENCE=0 0 * * *

# Logging
LOG_LEVEL=INFO
LOG_FILE=app/logs/system.log

# Support Contact (for email templates)
SUPPORT_EMAIL=support@company.com
SUPPORT_PHONE=1234-5678
